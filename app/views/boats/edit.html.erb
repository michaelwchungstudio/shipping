<h1>Boats#edit</h1>

<%= form_for @boat do |b| %>
  <div class="">
    Add job to boat: <%= select_tag "jobs", options_from_collection_for_select(Job.all,"id", :showcase)%>
  </div>
<% end %>



<%= form_for @boat do |b|%>
  <div class="boat-name">
    Boat name:
    <%= b.text_field :name %>
  </div>

  <div class="boat-no_containers">
    Container Number:
    <%= b.text_field :no_containers %>
  </div>

  <div class="boat-loc">
    Boat location:
    <%= b.text_field :loc %>
  </div>

  <div class="submit">
    <%= b.submit%>
  </div>

  <br>


<% end %>
